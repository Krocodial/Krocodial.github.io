        // Cyber Attack Feed JS
        script.
            async function fetchSingleFeed(rssUrl, sourceName) {
                try {
                    const res = await fetch(`https://api.rss2json.com/v1/api.json?rss_url=${encodeURIComponent(rssUrl)}`);
                    if (!res.ok) throw new Error('API error');
                    const data = await res.json();
                    if (data && data.items && data.items.length > 0) {
                        const item = data.items[0];
                        return `<div class='mb-2 text-start'><a href='${item.link}' target='_blank' class='text-white fw-bold'>${item.title}</a><br><small class='text-secondary'>${sourceName} &middot; ${new Date(item.pubDate).toLocaleString()}</small></div>`;
                    } else {
                        return `<div class='mb-2 text-start text-secondary'>No recent news from ${sourceName}.</div>`;
                    }
                } catch (e) {
                    return `<div class='mb-2 text-start text-secondary'>Unable to load ${sourceName} feed.</div>`;
                }
            }
            async function fetchAllCyberFeeds() {
                const feed = document.getElementById('cyber-attack-feed');
                feed.innerHTML = 'Loading latest news from top sources...';
                const feeds = [
                    { url: 'https://krebsonsecurity.com/feed/', name: 'Krebs on Security' },
                    { url: 'https://thehackernews.com/rss.xml', name: 'The Hacker News' },
                    { url: 'https://www.bleepingcomputer.com/feed/', name: 'BleepingComputer' },
                    { url: 'https://www.darkreading.com/rss.xml', name: 'Dark Reading' }
                ];
                const results = await Promise.all(feeds.map(f => fetchSingleFeed(f.url, f.name)));
                feed.innerHTML = results.join('');
            }
            fetchAllCyberFeeds();

